<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chat_bar_avatar"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/avatar_default2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="2dp" />

    <TextView
        android:id="@+id/chat_bar_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="2dp"
        android:layout_toStartOf="@+id/chat_bar_avatar"
        android:text="Default UserName"
        android:textColor="@color/colorSecondaryText"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chat_bar_user_name"
        android:id="@+id/chat_bar_last_seen"
        android:text="Last Seen"
        android:layout_margin="2dp"
        android:textColor="@color/colorSecondaryText" />


</RelativeLayout>